<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">VDV</h1>
            <div class="list-group">
                <a href="/products/?productId=5fc905bf69c6dd109c327684" class="list-group-item">TOP</a>
                <a href="/products/?productId=5fc905e569c6dd109c327685" class="list-group-item">PANTS & SHORTS</a>
                <a href="/products/?productId=5fc905f569c6dd109c327686" class="list-group-item">SKIRTS</a>
                <a href="/products/?productId=5fc9060d69c6dd109c327687" class="list-group-item">JACKETS</a>
                <a href="/products/?productId=5fc9062269c6dd109c327688" class="list-group-item">DRESSES</a>
                <a href="/products/?productId=5fc9063b69c6dd109c327689" class="list-group-item">ACCESSORIES</a>
                <a href="/products/?productId=5fc9064c69c6dd109c32768a" class="list-group-item">SETS</a>
                <a href="/products/?productId=5fc9065a69c6dd109c32768b" class="list-group-item">BOTTOMS</a>
            </div>

        </div>
        <div class="col-lg-9">

            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="{{product.imgSrc}}" alt="">
                <div class="card-body">
                    <h3 class="card-title">{{product.nameProduct}}</h3>
                    <h4>{{product.price}}</h4>
                    <p class="card-text">{{product.productDescription}}</p>
                    <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
                    4.0 stars
                </div>
                <a href="/cart/add/{{product._id}}" class="btn btn-success">Add to cart</a>
            </div>
            <!-- /.card -->

            <div class="card card-outline-secondary my-4">
                <div class="card-header">
                    Product Reviews
                </div>
                <div class="card-body">
                    {{#each reviews}}
                    <p>{{review}}</p>
                    <small class="text-muted">Posted by {{name}}</small>
                    <hr>
                    {{/each}}
                    <ul class="pagination justify-content-center">
                        {{#isnt currentPage 1}}
                            <li class="page-item">
                                <a class="page-link" href="/products/detail/{{product._id}}/?page={{prevPage}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        {{/isnt}}

                        {{#if hasPreviousPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products/detail/{{product._id}}/?page={{prevPage}}">{{prevPage}}</a>
                            </li>
                        {{/if}}

                        <li class="page-item active">
                            <a class="page-link" href="javascript:void(0)" tabindex="-1">{{currentPage}}</a>
                        </li>

                        {{#if hasNextPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products/detail/{{product._id}}/?page={{nextPage}}">{{nextPage}}</a>
                            </li>
                        {{/if}}

                        {{#gt lastPage currentPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products/detail/{{product._id}}/?page={{nextPage}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                                </a>
                            </li>
                        {{/gt}}
                    </ul>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Leave a review</button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">New review</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/products/detail/{{product._id}}/" method="post">
                                            {{#if user}}
                                            <div class="form-group">
                                                <label for="name" class="col-form-label">Name:</label>
                                                <input disabled type="text" class="form-control" id="name" name="name" value="{{user.username}}" >
                                            </div>
                                            {{else}}
                                                <div class="form-group">
                                                    <label for="name" class="col-form-label">Name:</label>
                                                    <input type="text" class="form-control" id="name" name="name" value="">
                                                </div>
                                            {{/if}}
                                            <div class="form-group">
                                                <label for="review" class="col-form-label">Review:</label>
                                                <input type="text" class="form-control" id="review" name="review" value="">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <input type="submit" class="btn btn-primary" value="Send review">
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                </div>
            </div>
            <!-- /.card -->

        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->