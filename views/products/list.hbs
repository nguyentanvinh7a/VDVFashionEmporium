<!-- Page Content -->
<form class="form-inline">
    <div id="search">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
    </svg>
    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" name="q"
           aria-label="Search">
    </div>
</form>
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">VDV</h1>
            <div class="list-group">
                <a href="/products/" class="list-group-item">ALL</a>
                <a href="/products/?productId=5fc905bf69c6dd109c327684" class="list-group-item">TOPS</a>
                <a href="/products/?productId=5fc905e569c6dd109c327685" class="list-group-item">PANTS & SHORTS</a>
                <a href="/products/?productId=5fc905f569c6dd109c327686" class="list-group-item">SKIRTS</a>
                <a href="/products/?productId=5fc9060d69c6dd109c327687" class="list-group-item">JACKETS</a>
                <a href="/products/?productId=5fc9062269c6dd109c327688" class="list-group-item">DRESSES</a>
                <a href="/products/?productId=5fc9063b69c6dd109c327689" class="list-group-item">ACCESSORIES</a>
                <a href="/products/?productId=5fc9064c69c6dd109c32768a" class="list-group-item">SETS</a>
                <a href="/products/?productId=5fc9065a69c6dd109c32768b" class="list-group-item">BOTTOMS</a>
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">
                <ul id="productModel" style="display: flex; flex-wrap: wrap">
                    {{#each products}}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <li>
                                <div class="card h-100">
                                    <a href="/products/detail/{{_id}}"><img class="card-img-top" src={{imgSrc}} alt=""></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="/products/detail/{{_id}}">{{nameProduct}}</a>
                                        </h4>
                                        <h5>{{price}}â‚«</h5>
                                        <p class="card-text">{{productDescription}}</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                    </div>
                                </div>
                            </li>
                        </div>
                    {{/each}}
                </ul>
            </div>
            {{#and q productId}}
                <ul class="pagination justify-content-center">
                    {{#isnt currentPage 1}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?page={{prevPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{/isnt}}

                    {{#if hasPreviousPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?page={{prevPage}}">{{prevPage}}</a>
                        </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="javascript:void(0)" tabindex="-1">{{currentPage}}</a>
                    </li>

                    {{#if hasNextPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?page={{nextPage}}">{{nextPage}}</a>
                        </li>
                    {{/if}}

                    {{#gt lastPage currentPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                            </a>
                        </li>
                    {{/gt}}
                </ul>
            {{/and}}
            {{#if productId}}
                <ul class="pagination justify-content-center">
                    {{#isnt currentPage 1}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?productId={{productId}}&page={{prevPage}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{/isnt}}

                    {{#if hasPreviousPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?productId={{productId}}&page={{prevPage}}">{{prevPage}}</a>
                        </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="javascript:void(0)" tabindex="-1">{{currentPage}}</a>
                    </li>

                    {{#if hasNextPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?productId={{productId}}&page={{nextPage}}">{{nextPage}}</a>
                        </li>
                    {{/if}}

                    {{#gt lastPage currentPage}}
                        <li class="page-item">
                            <a class="page-link" href="/products/?productId={{productId}}&page={{nextPage}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                            </a>
                        </li>
                    {{/gt}}
                </ul>
            {{/if}}
            {{#if q}}
            <ul class="pagination justify-content-center">
                {{#isnt currentPage 1}}
                    <li class="page-item">
                        <a class="page-link" href="/products/?q={{q}}&page={{prevPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {{/isnt}}

                {{#if hasPreviousPage}}
                    <li class="page-item">
                        <a class="page-link" href="/products/?q={{q}}&page={{prevPage}}">{{prevPage}}</a>
                    </li>
                {{/if}}

                <li class="page-item active">
                    <a class="page-link" href="javascript:void(0)" tabindex="-1">{{currentPage}}</a>
                </li>

                {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="/products/?q={{q}}&page={{nextPage}}">{{nextPage}}</a>
                    </li>
                {{/if}}

                {{#gt lastPage currentPage}}
                    <li class="page-item">
                        <a class="page-link" href="/products/?q={{q}}&page={{nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                        </a>
                    </li>
                {{/gt}}
            </ul>
            {{/if}}
        </div>
        </div>
        <!-- /.row -->
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->